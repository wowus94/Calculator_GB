<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="styleTextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:autofillHints" tools:targetApi="o">phone</item>
        <item name="android:background">@color/field</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="styleEditText">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:autofillHints" tools:targetApi="o">phone</item>
        <item name="android:background">@color/field</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="btnNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginBtn</item>
        <item name="android:layout_marginTop">@dimen/marginBtn</item>
        <item name="android:layout_marginRight">@dimen/marginBtn</item>
        <item name="android:backgroundTint">@color/color_number</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginBtn</item>
        <item name="android:layout_marginTop">@dimen/marginBtn</item>
        <item name="android:layout_marginRight">@dimen/marginBtn</item>
        <item name="android:backgroundTint">@color/color_action</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>


</resources>